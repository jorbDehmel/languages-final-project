digraph base {
    labelloc="t";
    label="T+";

    # Default settings
    graph [dpi=300];
    rankdir=LR;
    fontname="Helvetica";
    edge [arrowhead=normal,arrowtail=dot];
    node [shape=circle];

    # Vertices
    a [label="P"];
    b [label=""];
    c [label="_"];

    # Edges
    a -> b [label="T"];
    b -> b [label="T"];
    b -> c [label=<&epsilon;>];
}
